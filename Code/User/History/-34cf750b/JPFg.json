{
    // === Fonts & Editor Basic Appearance ===
    "editor.fontFamily": "Fira Code, 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14, // Adjust to your preference for readability
    "editor.lineHeight": 20, // Often good to add a bit of space between lines

    // === Core Editor Behavior ===
    "editor.tabSize": 2, // Standardize indentation. For web dev, 2 spaces is common; for Python, 4 spaces. You can override per language.
    "editor.wordWrap": "on", // Wraps long lines of code to fit the editor window
    "editor.renderWhitespace": "all", // Shows spaces, tabs, and newlines as symbols (helpful for debugging spacing issues)
    "editor.renderLineHighlight": "all", // Highlights the entire line where your cursor is
    "editor.cursorStyle": "line", // (default) or "block" for a solid block cursor (Vim-like)
    "editor.cursorBlinking": "smooth", // A softer blinking animation for the cursor
    "editor.minimap.enabled": true, // The small code overview on the right side
    "editor.stickyScroll.enabled": true, // Keeps current scope (function, class) headers visible at the top as you scroll

    // === Files & Saving ===
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay", // Autosaves changes after a short delay
    "files.trimTrailingWhitespace": true, // Removes unnecessary spaces at the end of lines on save
    "files.insertFinalNewline": true, // Ensures files always end with a newline character (good for Git)
    "files.eol": "\n", // Use Unix-style line endings (LF) for cross-platform compatibility
    "files.associations": {
        // Optional: Map specific file types to a language mode
        "*.env*": "ini" // Treat .env files as INI for syntax highlighting
    },

    // === File Explorer ===
    "explorer.compactFolders": false, // Prevents single-child folders from collapsing (can be useful for deep structures)
    "explorer.confirmDelete": false, // Skip confirmation when deleting files (use with caution!)
    "explorer.confirmDragAndDrop": false, // Skip confirmation when dragging and dropping files
    "workbench.tree.indent": 10, // Adjusts indentation for file explorer tree view for readability

    // === Terminal ===
    "terminal.integrated.defaultProfile.linux": "bash", // or "zsh" if you install it
    "terminal.integrated.fontSize": 14, // Match your editor font size or adjust for comfort
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",

    // === Workbench Appearance ===
    // Assuming you keep the default theme, but here are some options you might tweak
    "workbench.colorTheme": "Default Dark Modern", // Or "Default Dark+" for the older default dark theme
    "workbench.iconTheme": "material-icon-theme", // As discussed, for your icons
    "workbench.statusBar.visible": true, // Control visibility of activity bar on the left

    // === Breadcrumbs (for Navigation) ===
    "breadcrumbs.enabled": true, // Shows file path and symbol hierarchy at the top of the editor
    "breadcrumbs.filePath": "on", // Show full file path in breadcrumbs

    // === Language-Specific (Overriding Global) ===
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode", "editor.tabSize": 2 },
    // If you add a Python formatter like Black or autopep8:
    "python.formatting.provider": "autopep8", // or "black"
    "python.formatting.autopep8Args": ["--max-line-length", "88"], // Example argument for autopep8
    // Or for black:
    // "python.formatting.blackArgs": ["--line-length", "88"],

    // === Files to Exclude (Performance & Clutter) ===
    // Hides these files/folders from the VS Code explorer for less clutter
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.vscode": true, // Often helpful to hide
        "**/node_modules": true, // Crucial for JS projects
        "**/__pycache__": true, // Python bytecode
        "**/.venv": true, // Python virtual environments
        "**/.pytest_cache": true, // Python test cache
        "**/build": true, // Common build output folders
        "**/dist": true // Common distribution output folders
    },
    // Same for search results
    "search.exclude": {
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/build": true,
        "**/dist": true
    },
    "editor.linkedEditing": true
}
