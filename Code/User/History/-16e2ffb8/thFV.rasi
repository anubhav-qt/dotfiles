configuration {
    modi: "drun";
    show-icons: true;
    display-drun: "Apps";
    cycle: true;
    sort: true;
    matching: "fuzzy";
    case-sensitive: false;
    width: 30; /* Example: 30% of screen width */
    lines: 10; /* Number of lines to show */
    font: "sans-serif 10"; /* Example font */
    # location: 0; /* Top-left corner */
    # yoffset: 0;
    # xoffset: 0;
}

@theme "/home/your_username/.config/rofi/themes/custom_theme.rasi" /* Or a built-in theme */
